<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/checkboxLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/questionHead0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/questionId0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/poppinsregular"
                android:text="2."
                android:textAllCaps="false"
                android:textColorHint="@color/second_main_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/questionName0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsregular"
                android:text="Specify the type of room used for accommodation:"
                android:textAllCaps="false"
                android:textColorHint="@color/second_main_color"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/questionHead1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkbox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/second_main_color"
                android:buttonTint="@color/second_main_color" />

            <TextView
                android:id="@+id/questionId1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-10dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/poppinsregular"
                android:text="1."
                android:textAllCaps="false"
                android:textColorHint="@color/second_main_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/questionName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsregular"
                android:text="Single-family (individual) house"
                android:textAllCaps="false"
                android:textColorHint="@color/second_main_color"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/questionHead2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="38dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/questionId2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/poppinsregular"
                android:text="2."
                android:textAllCaps="false"
                android:textColorHint="@color/second_main_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/questionName2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/poppinsregular"
                android:text="Apartment buildings (two or more apartment buildings)"
                android:textAllCaps="false"
                android:textColorHint="@color/second_main_color"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/questionHead21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkbox21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/second_main_color"
                android:buttonTint="@color/second_main_color" />

            <TextView
                android:id="@+id/questionId21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="-10dp"
                android:fontFamily="@font/poppinsregular"
                android:text="2.1"
                android:textAllCaps="false"
                android:textColorHint="@color/second_main_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/questionName21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsregular"
                android:text="Semi-detached house"
                android:textAllCaps="false"
                android:textColorHint="@color/second_main_color"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/questionHead22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkbox22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/second_main_color"
                android:buttonTint="@color/second_main_color" />

            <TextView
                android:id="@+id/questionId22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="-10dp"
                android:fontFamily="@font/poppinsregular"
                android:text="2.2"
                android:textAllCaps="false"
                android:textColorHint="@color/second_main_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/questionName22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsregular"
                android:text="Three or more apartments"
                android:textAllCaps="false"
                android:textColorHint="@color/second_main_color"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/questionHead3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkbox3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/second_main_color"
                android:buttonTint="@color/second_main_color" />

            <TextView
                android:id="@+id/questionId3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="-10dp"
                android:fontFamily="@font/poppinsregular"
                android:text="3"
                android:textAllCaps="false"
                android:textColorHint="@color/second_main_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/questionName3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsregular"
                android:text="Building on the suburban area"
                android:textAllCaps="false"
                android:textColorHint="@color/second_main_color"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/questionHead4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkbox4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/second_main_color"
                android:buttonTint="@color/second_main_color" />

            <TextView
                android:id="@+id/questionId4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="-10dp"
                android:fontFamily="@font/poppinsregular"
                android:text="4"
                android:textAllCaps="false"
                android:textColorHint="@color/second_main_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/questionName4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/poppinsregular"
                android:text="Other (for example, a yurt, a gatehouse, a trailer, a container)"
                android:textAllCaps="false"
                android:textColorHint="@color/second_main_color"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/questionHead5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkbox5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/second_main_color"
                android:buttonTint="@color/second_main_color" />

            <TextView
                android:id="@+id/questionId5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="-10dp"
                android:fontFamily="@font/poppinsregular"
                android:text="5"
                android:textAllCaps="false"
                android:textColorHint="@color/second_main_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/questionName5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsregular"
                android:text="Dormitories"
                android:textAllCaps="false"
                android:textColorHint="@color/second_main_color"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>