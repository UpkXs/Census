<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="none"
    tools:context=".view.ViewInfoAdminActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="50dp"
            android:gravity="center"
            android:text="@string/what_action_you_want_to_do"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/poppinsregular" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/btnRegisterNewStationary"
                android:text="@string/register_new_stationary"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:fontFamily="@font/poppinsmediumitalic"
                android:textColor="@color/second_main_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg"
                app:backgroundTint="@null"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/btnRegisterNewController"
                android:text="@string/register_new_controller"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:fontFamily="@font/poppinsmediumitalic"
                android:textColor="@color/second_main_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg"
                app:backgroundTint="@null"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/btnDeleteStationary"
                android:text="@string/delete_stationary"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:fontFamily="@font/poppinsmediumitalic"
                android:textColor="@color/second_main_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg"
                app:backgroundTint="@null"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/btnDeleteController"
                android:text="@string/delete_controller"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:fontFamily="@font/poppinsmediumitalic"
                android:textColor="@color/second_main_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg"
                app:backgroundTint="@null"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/btnChangeUserInfo"
                android:text="@string/change_user_info"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:fontFamily="@font/poppinsmediumitalic"
                android:textColor="@color/second_main_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg"
                app:backgroundTint="@null"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>